{
  // --- Copilot Agent & Reasoning Core ---
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "chat.instructionsFilesLocations": {
    "${workspaceFolder}/instructions": true
  },
  "github.copilot.chat.agent.thinkingTool": true, // ENABLES DEEP REASONING
  "github.copilot.chat.editor.temporalContext.enabled": true, // AI understands "what changed recently"
  // --- Context Hygiene (Critical for Accuracy) ---
  // We hide heavy files so the AI context window isn't wasted on trash
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.next": true,
    "**/coverage": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true,
    "**/*.min.js": true
  },
  // --- Automated Quality Control ---
  // Fix imports and linting automatically so the AI focuses on Logic, not formatting
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.formatOnSave": true,
  // --- Prediction & Suggestions ---
  "github.copilot.nextEditSuggestions.enabled": true,
  "editor.inlineSuggest.enabled": true
}